@model IEnumerable<OurDestination.Models.Committee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>

</p>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card p-2">
                <div class="row">
                    <div class="col">
                        @Html.ActionLink("Create New", "Create", null, null, new { @Class = "btn btn-primary" })
                    </div>
                    <div class="col">
                        <h2 id="styletext">
                            Committees List
                        </h2>
                    </div>
                </div>
            </div>
            <br />
            <div class="card p-2">
                <table class="table table-hover text-center table-striped table-sm" id="tbllist">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Member.MemberName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Position)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ElactedDate)
                        </th>
                        <th>Action</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Member.MemberName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Position)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ElactedDate)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
